# Values
packages_cache="${XDG_CACHE_HOME:-"$HOME/.cache"}/bpackages_cache"


# Start
if [ -f "$BPACKAGES_FILE" ] && [ -n "$BPACKAGES_MAINPM" ]; then
	awk '{gsub("#.*$", "");print}' "$BPACKAGES_FILE" > "$packages_cache"

		                                   pms="$BPACKAGES_MAINPM"
	[ "$BPACKAGES_MAINPM"  = 'Pacman' ] && pms="$pms AUR"
		                                   pms="$pms Flatpak"
	[ "$BPACKAGES_MAINPM" != 'XBPS'   ] && pms="$pms Snapcraft"

	for pm in $pms; do
		if [ -n "$(cat "$packages_cache")" ]; then

			case $pm in
				'Pacman')    pm_launcher='sudo pacman --sync --refresh --noconfirm --needed' ; pm_mark='PAC' ;;
				'APT')       pm_launcher='sudo apt install --assume-yes'                     ; pm_mark='APT' ;;
				'XBPS')      pm_launcher='sudo xbps-install --sync --yes'                    ; pm_mark='XBP' ;;
				'AUR')       pm_launcher='yay -Sy --nodiffmenu --save'                       ; pm_mark='AUR' ;; #FIXME
				'Flatpak')   pm_launcher='sudo flatpak install'                              ; pm_mark='FLA' ;; #FIXME
				'Snapcraft') pm_launcher='sudo snap install'                                 ; pm_mark='SNA' ;; #FIXME
				*)           echo "'$pm' packages manager not found"                         ; exit 1        ;;
			esac

			echo "Installing $pm Packages:"

			$pm_launcher $(cat "$packages_cache" | awk -v FPAT="$pm_mark:[^ ]+" 'NF{ print $1 }' | awk "{gsub(\"$pm_mark:\", \"\");print}")

			awk "!/$pm_mark:/" "$packages_cache" > "$packages_cache"
		fi
	done
else
	[ -f "$BPACKAGES_FILE"   ] || echo '$BPACKAGES_FILE is unset, please `export BPACKAGES_FILE=path/to/packages`'
	[ -n "$BPACKAGES_MAINPM" ] || echo '$BPACKAGES_MAINPM is unset, please `export BPACKAGES_MAINPM=[Pacman|APT|XBPS]`'
	exit 1
fi


exit 0
